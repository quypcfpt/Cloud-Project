<script id="hidden-template" type="text/x-custom-template">
    <div class="post-entry-horzontal">
        <a href="${link}" style="width:750px">
            <span class="text">
                <h2>Chapter ${id} :${name}</h2>
            </span>
        </a>
    </div>
</script>

@section scripts{
    <script>
            $(document).ready(function () {
                LoadChapterList();
                LoadStory();
        })
            function LoadChapterList() {
                $.ajax({
                    url: `${configuration.BASE_API_URL}Chapter/getChapterListbyStoryId/@Model.chapterId`,
                    method: "GET",
                    success: function (result) {
                        $.each(result.data, function (key, value) {
                            var story = $('#hidden-template').text();
                            story = story.replace("${name}", value.name);
                            story = story.replace("${id}", value.id);
                            story = story.replace("${link}", "/singlechapter?chapterId=" + value.id + "&storyId=@Model.chapterId");
                            $("#listChapter").append(story);
                        });

                    },
                    error: function (result) {
                        alert("Có lỗi xảy ra!")
                    }
                });
        }

        function LoadStory() {
            $.ajax({
                url: `${configuration.BASE_API_URL}Story/getDetail/@Model.chapterId`,
                method: "GET",
                success: function (result) {
                    $('#story_description').append(result.data.description)
                   
                },
                error: function (result) {
                    alert("Có lỗi xảy ra!")
                }
            });
        }
       
      
    </script>
    }
