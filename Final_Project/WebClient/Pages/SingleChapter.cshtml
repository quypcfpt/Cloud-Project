<script id="hidden-template" type="text/x-custom-template">
    <div class="post-meta">
        <span class="author mr-2" id="authorName"></span>&bullet;
        <span class="mr-2">${createDate} </span> &bullet;
        <span class="ml-2"><span class="fa fa-eye"></span> ${totalVisit}</span>
